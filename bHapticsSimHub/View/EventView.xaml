<UserControl
    x:Class="bHapticsSimHub.EventView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:bHapticsSimHub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{x:Static local:SimhubViewModel.Instance}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ToggleOnOff" TargetType="{x:Type ToggleButton}">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border
                                Background="#3E3E3E"
                                BorderBrush="#3E3E3E"
                                BorderThickness="0"
                                CornerRadius="2">
                                <Border.Visibility>
                                    <Binding Path="IsChecked" RelativeSource="{RelativeSource TemplatedParent}">
                                        <Binding.Converter>
                                            <local:BooleanToVisibilityConverter False="Visible" True="Collapsed" />
                                        </Binding.Converter>
                                    </Binding>
                                </Border.Visibility>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="OFF"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </Border>
                            <Border
                                Background="#119EDA"
                                BorderBrush="#119EDA"
                                BorderThickness="0"
                                CornerRadius="2">
                                <Border.Visibility>
                                    <Binding Path="IsChecked" RelativeSource="{RelativeSource TemplatedParent}">
                                        <Binding.Converter>
                                            <local:BooleanToVisibilityConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </Border.Visibility>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="ON"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="96,10,0,20">
        <ItemsControl ItemsSource="{Binding EventItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Width="170"
                        Margin="0,5,10,0"
                        HorizontalAlignment="Center">
                        <TextBlock
                            MaxWidth="80"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding Name}"
                            TextWrapping="Wrap" />

                        <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding MotorInfos}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ToggleButton
                                        Width="170"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        Command="{Binding StatusCommonad}"
                                        FontWeight="Bold"
                                        IsChecked="{Binding IsSelected, Mode=OneWay}"
                                        Style="{StaticResource ToggleOnOff}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>

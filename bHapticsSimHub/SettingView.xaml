<UserControl
    x:Class="bHapticsSimHub.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:bHapticsSimHub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{x:Static local:SimhubViewModel.Instance}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ButtonNull" TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="{x:Null}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers />
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <Grid>
            <StackPanel>
                <Grid Margin="0,30,0,0">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Button
                            Height="24"
                            Command="{Binding ResetCommonad}"
                            Style="{StaticResource ButtonNull}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Reset"
                                    TextWrapping="Wrap" />
                                <Image
                                    Width="24"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Source="pack://application:,,,/bHapticsSimHub;component/Image/icon-reset.png" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="24"
                            Margin="16,0"
                            Command="{Binding ExportCommonad}"
                            Style="{StaticResource ButtonNull}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Export"
                                    TextWrapping="Wrap" />
                                <Image
                                    Width="24"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Source="pack://application:,,,/bHapticsSimHub;component/Image/icon-export.png" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="24"
                            Command="{Binding ImportCommonad}"
                            Style="{StaticResource ButtonNull}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Import"
                                    TextWrapping="Wrap" />
                                <Image
                                    Width="24"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Source="pack://application:,,,/bHapticsSimHub;component/Image/icon-import.png" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Command="{Binding SelectModeCommonad}"
                            CommandParameter="all"
                            Style="{StaticResource ButtonNull}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    IsEnabled="{Binding IsAllSelected}"
                                    Text="All"
                                    TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                                    <Setter Property="Foreground" Value="#545454" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                        <Button
                            Margin="28,0"
                            Command="{Binding SelectModeCommonad}"
                            CommandParameter="front"
                            Style="{StaticResource ButtonNull}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    IsEnabled="{Binding IsFrontSelected}"
                                    Text="Front"
                                    TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                                    <Setter Property="Foreground" Value="#545454" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                        <Button
                            Command="{Binding SelectModeCommonad}"
                            CommandParameter="back"
                            Style="{StaticResource ButtonNull}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    IsEnabled="{Binding IsBackSelected}"
                                    Text="Back"
                                    TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                                    <Setter Property="Foreground" Value="#545454" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <Button
                        Height="24"
                        HorizontalAlignment="Right"
                        Command="{Binding MotorPositionViewCommonad}"
                        Style="{StaticResource ButtonNull}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Motor Position Information"
                                TextWrapping="Wrap" />
                            <Image
                                Width="24"
                                Height="24"
                                Margin="4,0,0,0"
                                Source="pack://application:,,,/bHapticsSimHub;component/Image/icon-info.png" />
                        </StackPanel>
                    </Button>
                </Grid>

                <local:AllMotorsView Visibility="{Binding AllVisibility}" />
                <local:FrontMotorsView Visibility="{Binding FrontVisibility}" />
                <local:BackMotorsView Visibility="{Binding BackVisibility}" />
            </StackPanel>
            <Border
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                BorderBrush="Black"
                CornerRadius="16"
                Visibility="{Binding MotorPositionVisible}">
                <local:MotorPositionView />
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

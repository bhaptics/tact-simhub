<UserControl
    x:Class="bHapticsSimHub.AllMotorsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:bHapticsSimHub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1800"
    DataContext="{x:Static local:SimhubViewModel.Instance}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ToggleOnOff" TargetType="{x:Type ToggleButton}">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border
                                Background="#3E3E3E"
                                BorderBrush="#3E3E3E"
                                BorderThickness="0"
                                CornerRadius="2">
                                <Border.Visibility>
                                    <Binding Path="IsChecked" RelativeSource="{RelativeSource TemplatedParent}">
                                        <Binding.Converter>
                                            <local:BooleanToVisibilityConverter False="Visible" True="Collapsed" />
                                        </Binding.Converter>
                                    </Binding>
                                </Border.Visibility>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="OFF"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </Border>
                            <Border
                                Background="#119EDA"
                                BorderBrush="#119EDA"
                                BorderThickness="0"
                                CornerRadius="2">
                                <Border.Visibility>
                                    <Binding Path="IsChecked" RelativeSource="{RelativeSource TemplatedParent}">
                                        <Binding.Converter>
                                            <local:BooleanToVisibilityConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </Border.Visibility>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="White"
                                    Text="ON"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderAllThumbYellowStyle" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse
                            Width="10"
                            Height="10"
                            Fill="#8E50FF" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderAllRepeatButtonDecreaseYellow" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Height" Value="2" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Grid Height="{TemplateBinding Height}" Background="#01000000">
                            <Border
                                Height="4"
                                VerticalAlignment="Center"
                                Background="#8E50FF"
                                CornerRadius="2" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderAllRepeatButtonIncreaseGray" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Height" Value="2" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Grid Height="{TemplateBinding Height}" Background="#01000000">
                            <Border
                                Height="4"
                                VerticalAlignment="Center"
                                Background="#363636"
                                CornerRadius="2" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="SliderAllConfigDefaultTemplate" TargetType="Slider">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                </Grid.RowDefinitions>
                <Track x:Name="PART_Track">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderAllRepeatButtonDecreaseYellow}" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SliderAllThumbYellowStyle}" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderAllRepeatButtonIncreaseGray}" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="SliderAllConfigDefault" TargetType="Slider">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsMoveToPointEnabled" Value="true" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="MinHeight" Value="12" />
                    <Setter Property="Template" Value="{StaticResource SliderAllConfigDefaultTemplate}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SliderThumbYellowStyle" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid>
                            <Ellipse
                                x:Name="ActiveThumb"
                                Width="10"
                                Height="10"
                                Fill="#24A148">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Slider}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse
                                x:Name="InactiveThumb"
                                Width="10"
                                Height="10"
                                Fill="#545454">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Slider}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatButtonDecreaseYellow" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Height" Value="2" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Grid Height="{TemplateBinding Height}" Background="Transparent">
                            <Border
                                x:Name="ActiveTrack"
                                Height="4"
                                VerticalAlignment="Center"
                                Background="#24A148"
                                CornerRadius="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Slider}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <Border
                                x:Name="InactiveTrack"
                                Height="4"
                                VerticalAlignment="Center"
                                Background="#545454"
                                CornerRadius="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Slider}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatButtonIncreaseGray" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Height" Value="2" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Grid Height="{TemplateBinding Height}" Background="#01000000">
                            <Border
                                Height="4"
                                VerticalAlignment="Center"
                                Background="#545454"
                                CornerRadius="4" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="SliderConfigDefaultTemplate" TargetType="Slider">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                </Grid.RowDefinitions>
                <Track x:Name="PART_Track">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatButtonDecreaseYellow}" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SliderThumbYellowStyle}" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatButtonIncreaseGray}" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="SliderConfigDefault" TargetType="Slider">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsMoveToPointEnabled" Value="true" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="MinHeight" Value="12" />
                    <Setter Property="Template" Value="{StaticResource SliderConfigDefaultTemplate}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ButtonNull" TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="{x:Null}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers />
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Margin="96,15,0,20" Orientation="Horizontal">
            <ItemsControl ItemsSource="{Binding Motors}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="86" Margin="0,0,8,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}"
                                TextWrapping="Wrap" />
                            <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                <Slider
                                    Width="60"
                                    Height="4"
                                    Margin="0,0,3,0"
                                    Maximum="100"
                                    Minimum="0"
                                    Style="{StaticResource SliderAllConfigDefault}"
                                    Tag="{Binding Index}"
                                    ValueChanged="Slider_ValueChanged_1"
                                    Value="{Binding Intensity, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="White"
                                    Text="{Binding Intensity}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock
                                MaxWidth="80"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}"
                                TextWrapping="Wrap" />

                            <ToggleButton
                                Width="86"
                                Height="24"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding StatusCommonad}"
                                FontWeight="Bold"
                                IsChecked="{Binding IsSelected, Mode=OneWay}"
                                Style="{StaticResource ToggleOnOff}" />
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding MotorInfos}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Width="86" Margin="0,0,8,20">
                                        <ToggleButton
                                            Width="86"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Command="{Binding StatusCommonad}"
                                            FontWeight="Bold"
                                            IsChecked="{Binding IsSelected, Mode=OneWay}"
                                            Style="{StaticResource ToggleOnOff}" />
                                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                            <Slider
                                                Width="60"
                                                Height="4"
                                                Margin="0,0,3,0"
                                                IsEnabled="{Binding IsSelected}"
                                                Maximum="100"
                                                Minimum="0"
                                                Style="{StaticResource SliderConfigDefault}"
                                                ValueChanged="Slider_ValueChanged"
                                                Value="{Binding Intensity, UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBlock
                                                FontSize="14"
                                                IsEnabled="{Binding IsSelected}"
                                                Text="{Binding Intensity}"
                                                TextWrapping="Wrap">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="White" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                                                <Setter Property="Foreground" Value="#545454" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
